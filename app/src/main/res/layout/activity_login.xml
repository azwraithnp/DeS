<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.azwraith.apps.des.LoginActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#595959"
        android:layout_centerHorizontal="true"
        android:text="Welcome back!\nLog-in to get the full\nDaily eSports experience!" />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="#595959"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="SIGN IN"/>

    <EditText
        android:layout_marginTop="0dp"
        android:layout_below="@id/signInText"
        android:id="@+id/usernameEnter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_person_black_48dp"
        android:padding="10dp"
        android:hint="Username or Email"
        android:drawablePadding="5dp"
        android:background="#CCCCCC">

    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/usernameEnter"
        android:id="@+id/passEnter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_48dp"
        android:padding="10dp"
        android:hint="Password"
        android:drawablePadding="5dp"
        android:background="#CCCCCC">

    </EditText>

    <Button
        android:id="@+id/SignButton"
        android:layout_width="wrap_content"
        android:layout_below="@id/passEnter"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#349D3B"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:text="SIGN IN"/>

    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/RegisterButton"
        android:layout_width="wrap_content"
        android:layout_below="@id/passEnter"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00AEEF"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:text="REGISTER"/>

    <TextView
        android:id="@+id/forgotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/RegisterButton"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#595959"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:text="forgot your password?" />

    <TextView
        android:id="@+id/ORText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgotText"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#595959"
        android:layout_centerHorizontal="true"
        android:text="OR" />

    <com.facebook.login.widget.LoginButton
        android:layout_marginTop="15dp"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@id/ORText"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
