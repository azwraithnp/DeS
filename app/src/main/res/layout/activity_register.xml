<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azwraith.apps.des.RegisterActivity">
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:textSize="23sp"
        android:padding="15dp"
        android:textColor="#595959"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="REGISTER"/>
    <EditText
        android:layout_marginTop="0dp"
        android:layout_below="@id/registerText"
        android:id="@+id/fnameEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#595959"
        android:textSize="16sp"
        android:hint="First Name *"
        android:background="#CCCCCC">
        </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/fnameEnter"
        android:id="@+id/lnameEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#595959"
        android:padding="10dp"
        android:hint="Last Name *"
        android:background="#CCCCCC">
    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/lnameEnter"
        android:id="@+id/emailEnter"
        android:layout_width="match_parent"
        android:textColor="#595959"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:hint="Email *"
        android:background="#CCCCCC">
    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/emailEnter"
        android:id="@+id/bioEnter"
        android:layout_width="match_parent"
        android:textColor="#595959"
        android:layout_height="60dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:hint="Biography"
        android:gravity="top"
        android:drawablePadding="5dp"
        android:background="#CCCCCC">
    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/bioEnter"
        android:id="@+id/phoneEnter"
        android:textColor="#595959"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="phone"
        android:padding="10dp"
        android:hint="Phone Number *"
        android:background="#CCCCCC">
    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/phoneEnter"
        android:id="@+id/passEnter"
        android:textColor="#595959"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Password *"
        android:background="#CCCCCC">
    </EditText>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/passEnter"
        android:id="@+id/confEnter"
        android:textColor="#595959"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:padding="10dp"
        android:hint="Confirm Password *"
        android:background="#CCCCCC">
    </EditText>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/requiredText"
        android:textColor="#595959"
        android:layout_below="@id/confEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* required"/>

    <Button
        android:id="@+id/confRegister"
        android:layout_width="match_parent"
        android:layout_below="@id/requiredText"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#349D3B"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="#FFF"
        android:text="CONFIRM"/>
</RelativeLayout>
</ScrollView>